<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.VibeSent" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme color customization -->
        <item name="colorPrimary">@color/white</item> <!-- Customize this -->
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Popup menu customization -->
        <item name="popupMenuStyle">@style/App.PopupMenu</item>
        <!--<item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
-->
    </style>

    <style name="App.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <!-- Customizing Popup Menu Background and Text -->
        <item name="android:popupBackground">@color/white</item> <!-- Popup background color -->
        <item name="android:textColor">@color/black</item> <!-- Text color for menu items -->
    </style>

    <!-- Optional Dialog customization -->
    <style name="dialog">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="windowNoTitle">true</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
