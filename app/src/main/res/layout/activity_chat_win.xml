<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatWin"
    android:background="@color/white">

    <!-- Header with profile pic and name -->


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:orientation="horizontal"
        android:background="@drawable/bordermain"
        android:layout_margin="@dimen/_5sdp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimgg"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="5.00dp"
            android:layout_marginTop="5.00dp"
            android:layout_marginEnd="13.00dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/photocamera"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/receiverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="23.40dp" />

            <TextView
                android:id="@+id/ReceiverStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="10.40dp" />
            <TextView
                android:id="@+id/receiverLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location loading..."
                android:textSize="10sp"
                android:textColor="#888888"
                android:layout_below="@id/receiverName"/>


        </LinearLayout>


    </LinearLayout>

    <!-- RecyclerView for messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/msgadpter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/ll1"
        android:layout_above="@id/ll2"
        android:padding="@dimen/_10sdp"/>

    <!-- Message input area -->
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <!-- Message box -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_25sdp">

            <EditText
                android:id="@+id/textmsg"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type a message..."
                android:background="@null"
                android:paddingStart="13dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Send button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/sendbtnn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_25sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/sendbut" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>
