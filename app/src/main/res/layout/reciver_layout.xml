<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pro"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/photocamera" />

    <TextView
        android:id="@+id/recivertextset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/reciver_shape"
        android:layout_toRightOf="@id/pro"
        android:padding="@dimen/_7sdp"
        android:text="r_msg"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Status TextView (Visible only for the last message) -->
    <TextView
        android:id="@+id/msgStatusReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pro"
        android:layout_below="@id/recivertextset"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="Seen"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="invisible" /> <!-- Initially hidden -->
</RelativeLayout>
